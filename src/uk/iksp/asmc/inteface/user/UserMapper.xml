<?xml version="1.0" encoding="UTF-8" ?> 
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 

<mapper namespace="uk.iksp.asmc.inteface.user.UserData"> 



	<select id="queryUserByName" parameterType="String" resultType="User">
		select * from asmc_user where userName=#{0}
	</select>
	
	<select id="queryUser">
		select * from asmc_user
	</select>
	
	<select id="addUser" parameterType="User" >
		insert into values(0,#{userName},#{userPassword})
	</select>
	
	<select id="delUser" parameterType="String">
		delete from asmc_user where userName=#{0}
	</select>
	
  
</mapper>
